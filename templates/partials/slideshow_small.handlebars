<ol class="dc-media--list dc-media--list__small">
  {{#each slideshow.slides}}  
    {{#dc_isslideimage this}}
      <li class="dc-media__image{{#if @first}} active{{/if}}">
        {{#if @first}} 
          <img src="{{content.src}}" data-src="{{content.src}}" class="loaded">
        {{else}}
          <img src="{{content.lowSrc}}" data-src="{{content.src}}">
        {{/if}}
      </li>
    {{/dc_isslideimage}}
    {{#dc_isslidetext this}}
      <li class="dc-media__text{{#if @first}} active{{/if}}">
        <div class="text">
          {{{content}}}
        </div>
      </li>
    {{/dc_isslidetext}}
    {{#dc_isslideembed this}}
      <li class="dc-media__embed{{#if @first}} active{{/if}}">
        {{{content}}}
      </li>
    {{/dc_isslideembed}}
    {{#dc_isslideaudio this}}
      <li class="dc-media__audio{{#if @first}} active{{/if}}">
        <audio src="{{content.src}}"></audio>
      </li>
    {{/dc_isslideaudio}}
    {{#dc_isslidevideo this}}
      <li class="dc-media__video{{#if @first}} active{{/if}}"></li>
        <video src="{{content.src}}"></video>
      </li>
    {{/dc_isslidevideo}}       
  {{/each}}
</ol>