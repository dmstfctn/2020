<nav class="dc-sitenav dc-sitenav__main">
  {{#each navigation}}
    <div class="dc-sitenav--entry dc-sitenav--entry__{{this.slug}}">
      {{#dc_ismenu 'DC' this}}   
      <a href="{{dc_urlpath "" }}" data-dc-localtarget="#{{this.slug}}">
        {{this.name}}
        <span class="dc-logo">
          {{> svg_DC }}
        </span>
      </a>
      {{else}}
      <a href="{{dc_urlpath this.slug }}" data-dc-localtarget="#{{this.slug}}">{{this.name}}</a>
      {{/dc_ismenu}}   
    </div>
  {{/each}}
  <div class="dc-sitenav--entry dc-sitenav--entry__info">
    <a href="{{dc_urlpath "info"}}" data-dc-localtarget="#info">record</a>
  </div> 
</nav>
{{#each navigation}}
  {{> (lookup . 'template') }}
{{/each }}  